<h1>contacts</h1>

<%= link_to 'New Contact', new_contact_path %>

<table class="contacts-index">
  <tr>
    <th class="c-first">First</th>
    <th class="c-last">Last</th>
    <th class="c-email">Email</th>
    <th class="c-bd">Birthday</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @contacts.each do |contact| %>
  <tr>
    <td><%= contact.first %></td>
    <td><%= contact.last %></td>
    <td><%= contact.email %></td>
    <td><%= if !contact.birthday.nil? then contact.birthday.to_s(:bd) end %></td>
    <td><%= link_to 'Show', contact %></td>
    <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
    <td><%= link_to 'Destroy', contact, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
