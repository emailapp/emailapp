<h1>events</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Time</th>
    <th>Subject</th>
    <th>Message</th>
    <th>Contacts</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.name %></td>
    <td><%= event.schedule_time.to_s(:date) %></td>
    <td><%= event.subject %></td>
    <td><%= event.message %></td>
    <td><%= event.contacts %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

